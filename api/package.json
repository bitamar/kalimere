{
  "name": "luz-api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.1.0",
    "@fastify/formbody": "8.0.2",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.24.0",
    "drizzle-orm": "^0.33.0",
    "fastify": "^5.6.0",
    "jose": "^5",
    "openid-client": "^6",
    "pg": "^8",
    "pino-pretty": "^11",
    "twilio": "^5.10.2",
    "zod": "^3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
